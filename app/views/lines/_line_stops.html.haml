%table#line_stops
  %tr
    %th Location
    %th Time
    - @stops.each do |stop|
      %tr{:class => cycle('odd', 'even')}
        %td{:class => 'td_link'}= link_to Location.find(stop.location_id).name, location_path(stop.location_id)
        %td{:class => 'td_nonlink'}= Time.parse(stop.hour.to_s + ':' + stop.minute.to_s).strftime('%l:%M%P')
